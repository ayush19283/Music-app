        android:layout_height="match_parent"
        android:background="#202020"
        android:orientation="vertical">


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="550dp"

            >

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




            </LinearLayout>
        </ScrollView>
        <LinearLayout
